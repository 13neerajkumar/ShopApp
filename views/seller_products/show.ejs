<%- include("../partials/header")%>
<%- include("../partials/seller_navbar")%>

<link rel="stylesheet" href="/css/star.css">

<div class="container" style="margin-top: 5rem;">

  <%- include("../partials/flash")%>

  
    <div class="row">
        <div class="col-lg-6 mt-3 mb-3">
            <div class="card">
                <img src="<%=product.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h5 class="card-title">&#8377; <%=product.price%></h5>
                  <p class="card-text"><%=product.desc%></p>
                  
                  <a href="/seller_products/<%=product._id%>/edit" class="btn btn-warning">Edit</a><br>
                  
                  <div class="mt-3">
                    <form action="/seller_products/<%=product._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                  </form>
                  </div>
                 
                </div>
              </div>
        </div>

    </div>

</div>


